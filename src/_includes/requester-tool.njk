<!-- Requester Tool Tab -->
<div class="ui bottom attached tab segment" data-tab="requester">
    <div class="ui two column stackable grid">
        <div class="column">
            <div class="ui segment">
                <h3 class="ui header">Requester Input</h3>
                <form class="ui form" id="requesterForm">
                    <div class="field">
                        <label>Location</label>
                        <textarea type="text" id="location" placeholder="Enter location"></textarea>
                    </div>
                    <div class="field">
                        <label>Service</label>
                        <textarea type="text" id="service" placeholder="Enter service"></textarea>
                    </div>
                    <div class="field">
                        <div class="ui checkbox">
                            <input type="checkbox" id="isToday" onchange="toggleDatePicker()">
                            <label>This is for today</label>
                        </div>
                    </div>
                    <div class="field" id="dateTimeField">
                        <label>Date & Time</label>
                        <div class="ui two column stackable grid">
                            <div class="column">
                                <input type="date" id="requestDate">
                            </div>
                            <div class="column">
                                <input type="time" id="requestTime">
                            </div>
                        </div>
                    </div>
                    <div class="ui buttons">
                        <button class="ui green button" type="button" onclick="formatRequester()">Generate</button>
                        <button class="ui button" type="button" onclick="clearRequesterForm()">Clear</button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="column">
            <div class="ui segment">
                <h3 class="ui header">
                    Formatted Request
                    <button class="ui right floated mini button" onclick="copyToClipboard('requesterOutput')" id="copyRequesterBtn" style="display: none;">
                        <i class="copy icon"></i> Copy
                    </button>
                </h3>
                <div class="ui message" id="requesterOutput" style="display: none; white-space: pre-wrap; font-family: monospace;"></div>
                <div class="ui placeholder segment" id="requesterPlaceholder">
                    <div class="ui icon header">
                        <i class="file outline icon"></i>
                        Fill out the form and click "Generate" to see the formatted request
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>